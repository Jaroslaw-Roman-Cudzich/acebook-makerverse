
    <div class="center">
      <img id="profile-pic" src="{{user.profilePicLocation}}" class="shrinkToFit" width="360" height="360">
    </div>
    
    <h1 id="profile" class="profile">{{user.name}}</h1>
{{#if showAddFriend}}
  <form id="add-friend-form" class="form-group" action="/users/{{user.id}}" method="POST">
      <input id="add-friend" type="submit" class="btn" value="Add Friend">
  </form>
{{/if}}
    
    <form class="form-group" action="/users/upload/" method="POST">
        <div id="update-profile-pic" >Update profile picture</div>
        <div id="pic-uploader-button">
        <input type="hidden" name="profile_pic" id="profile_pic_uploader" class="simple-file-upload" data-width="50" data-height="50" data-accepted="image/jpeg" resize-method="crop"  data-resize-width="500" data-resize-height="500" >
        <input type="submit" id="profile_pic_submit" class="btn btn-primary" value="Upload Photo" style="visibility: hidden;">
        </div>
    </form>

<table>
  <tr>
    <td>
    </td>
    <td valign="top">
      <h4>Friends</h4>
      {{> userList }}
    </td>
  </tr>
</table>
{{> postList }}

<script>
document.getElementById("profile_pic_uploader").addEventListener("fileUploadSuccess", function (e) {
    console.log("File Uploaded")
    document.getElementById("profile_pic_submit").click();
});
</script>